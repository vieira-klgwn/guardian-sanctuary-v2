{
  "compilerOptions": {
    "composite": true, // Required for project references
    "declaration": true, // Required for project references
    "declarationMap": true, // Optional, but recommended
    "sourceMap": true, // Optional, but recommended
    "outDir": "./dist/node", // Output directory for compiled files
    "target": "ES2017",
    "module": "commonjs", // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "three": ["node_modules/three/src/Three"],
      "three/*": ["node_modules/three/*"]
    }
  },
  "include": ["pages/api/**/*"],
  "exclude": ["node_modules", "dist"]
}