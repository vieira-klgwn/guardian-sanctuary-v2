{
  "compilerOptions": {
    "composite": true, // Required for project references
    "declaration": true, // Required for project references (to emit .d.ts files)
    "declarationMap": true, // Optional, but recommended for better editor support
    "sourceMap": true, // Optional, but recommended for debugging
    "outDir": "./dist/app", // Output directory for compiled files
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "three": ["node_modules/three/src/Three"],
      "three/*": ["node_modules/three/*"]
    }
  },
  "include": ["src/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}